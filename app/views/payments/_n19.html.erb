<% invoices.group_by(&:due_date).each do |due_date, invoices| -%>

  <li>
  <p><%= due_date %> (<%= invoices.size %> <%=l(:label_invoice_plural)-%> <%=h money(invoices.collect {|i| i.total}.sum) %>) - <%= link_to_if_authorized l(:button_download), :action => 'n19', :id => invoices.first, :bank_account => bank_account %> - <%= link_to_if_authorized l(:button_mark_done), {:action => 'n19_done', :id => invoices.first}, :confirm => l(:text_are_you_sure), :method => :post %></p>
  </li>

<% end -%>
