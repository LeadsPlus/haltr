<h3><%= l("label_#{params[:controller].singularize}_plural") %></h3>
<ul class="invoice_menu">
  <li id="invoice_new">
  <%= link_to l("label_#{params[:controller].singularize}_new"), {:action => 'new', :id => @project} %>
  </li>
  <% if params[:controller] == "invoices" -%>
    <li><%= link_to l(:label_invoice_template_plural), :controller => 'invoice_templates', :action => 'index', :id => @project %></li>
  <% else -%>
    <li><%= link_to l(:label_invoice_plural), :controller => 'invoices', :action => 'index', :id => @project %></li>
  <% end -%>
