<% if entity.countrycode.downcase == "esp" -%>
            <AddressInSpain>
               <Address><%=entity.address%></Address>
               <PostCode><%=entity.postalcode%></PostCode>
               <Town><%=entity.city%></Town>
               <Province><%=entity.province%></Province>
               <CountryCode><%=entity.countrycode%></CountryCode>
            </AddressInSpain>
<% else -%>
            <OverseasAddress>
               <Address><%=entity.address%></Address>
               <PostCodeAndTown><%=entity.postalcode%> <%=entity.city%></PostCodeAndTown>
               <Province><%=entity.province%></Province>
               <CountryCode><%=entity.countrycode%></CountryCode>
            </OverseasAddress>
<% end -%>
