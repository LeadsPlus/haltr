<% if @invoice.invoice_format == "pdf" -%>
  <% if @invoice.events.first -%>
    <li><%= link_to_if_authorized "#{l(:button_download)} PDF", {:controller=>'invoices', :action=>'legal', :id=>@invoice, :md5=>@invoice.events.first.md5}, :class=>'icon-haltr-save' %></li>
  <% end -%>
<% end -%>

<% if @invoice.state?(:received) or @invoice.state?(:error) -%>
  <li><%= link_to_function(I18n.t(:mark_accepted), "show_accepted_form();") if authorize_for(:received || :received, :mark_accepted) %></li>
  <li><%= link_to_function(I18n.t(:mark_refused),  "show_refused_form();") if authorize_for(:received || :received, :mark_refused) %></li>
<% end -%>

<% if @invoice.state?(:accepted) -%>
  <li><%= link_to_if_authorized l(:make_payment), new_project_payment_path(:project_id=>@project,:invoice_id=>@invoice, :payment_type=>@invoice.type), :class=>'icon-haltr-payment' %></li>
<% end -%>
