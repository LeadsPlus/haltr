<% lineid = f.object_name.split("[").last.gsub(/\]/,'') -%>
<div id="invoice_line_<%= lineid %>" class="invoice_line">

<p>
<%= f.text_field :quantity, :size => 4, :no_label => true %>
<%= f.text_field :description, :no_label => true %>
<%= f.text_field :price, :size => 10, :no_label => true %>

<%= link_to_function(image_tag("false.png"),"rm_line(#{lineid});") %>
</p>
</div>
<%= f.object.new_record? ? "" : f.hidden_field(:_destroy, {:value=>0, :id=>"destroy_line_#{lineid}"}) %>
