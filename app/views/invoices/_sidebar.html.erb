  <li>
  <%= link_to "#{l(:button_generate_invoices)} (#{num_new_invoices})", :controller => 'tasks', :action => 'create_more', :id => @project %> 
  </li>
  <% end -%>
  <% if authorize_for('tasks','automator') && num_not_sent > 0 -%>
  <li>
  <%= link_to "#{l(:button_send_invoices)}Â (#{num_not_sent})",{ :controller => 'tasks', :action => 'automator', :id => @project}, :title => l(:label_automator_info) %>
  </li>
  <% end -%>
  <li>
  <%= link_to "#{l(:label_invoice_report)} #{l('datetime.distance_in_words.x_months',3)}", :controller => 'tasks',:action => 'report', :id => @project, :months_ago => 3 %>
