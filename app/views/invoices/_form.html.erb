<%= error_messages_for 'invoice' %>
<%= javascript_include_tag 'terms', :plugin => 'haltr' %>
<%= javascript_include_tag 'invoice', :plugin => 'haltr' %>

<div class="box">
  <p><%= f.select :client_id, clients_for_select, :required => true %></p>
  <p><%= f.text_field :date, :size => 10, :required => true %><%= calendar_for('invoice_date') %></p>
  <% if controller.controller_name == "invoice_templates" -%>
    <p><%= f.select :frequency, frequencies_for_select, :required => true %></p>
  <% else -%>
    <p><%= f.text_field :number, :size => 10, :required => true %><%=" Last used: #{IssuedInvoice.last_number(@project)}" if IssuedInvoice.all.any?%></p>
  <% end -%>
  <p><%= f.text_field :currency, :required => true%></p>
  <p><%= f.text_field :ponumber %></p>
  <p><%= f.select(:terms, Terms.for_select, {}, {:onchange=>"terms()"}) %></p>
  <p><%= f.text_field :due_date, :size => 10, :disabled => !@invoice.custom_due? %><span id="due_date_cal" style="visibility: <%=@invoice.custom_due? ? "visible" : "hidden" %>;"><%= calendar_for('invoice_due_date') %></span></p>
  <p><%= f.text_field :tax_percent %></p>
<% if @invoice.withholding_tax_percent > 0 -%>
  <p><%= f.check_box :apply_withholding_tax %> (<%=@invoice.withholding_tax_percent%>% <%=@project.company.withholding_tax_name%>)</p>
<% end -%>
  <p><%= f.text_field :discount_text %></p>
  <p><%= f.text_field :discount_percent %></p>
  <p><%= f.text_area :extra_info, :rows=>3 %></p>
  <p><%= f.check_box :draft %></p>
  <p><%= f.select(:payment_method,Invoice.payment_methods, :required => true) %></p>
  <div id="invoice_lines">
    <p style="font-weight:bold;">
    <%= l(:field_quantity) %>
    <%= l(:field_description) %>
    <%= l(:field_price_in_cents) %>
    </p>
    <% f.fields_for :invoice_lines do |line_form| %>
      <%= render :partial => 'invoices/invoice_line', :locals => { :f => line_form } %>
    <% end %>
  </div>
  <p><%= add_invoice_line_link(f) %></p>
</div>

