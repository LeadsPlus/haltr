<% if @invoice.payments.any? -%>
  <h4><%=h l(:label_payment_plural)%></h4>
  <% @invoice.payments.each do |payment| -%>
    <table>
      <td class="item-delete first"><%= link_to_if_authorized "", destroy_payment_path(payment), :confirm => l(:text_are_you_sure), :method => :delete, :class => 'icon icon-del' %></td>
      <td class="item-date first"><%=h payment.date %></td>
      <td class="item-description"><%=h payment.description %></td>
      <td class="line-total last"><%=h money(payment.amount) %></td>
    </tr>
    </table>
    <tr>
  <% end -%>
<% end -%>
