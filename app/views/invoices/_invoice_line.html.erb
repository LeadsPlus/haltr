<% lineid = f.object_name.split("[").last.gsub(/\]/,'') -%>
<div id="invoice_line_<%= lineid %>" class="invoice_line">

<% if f.object.new_and_first -%>
  <%= f.text_field :quantity, :value => f.object.quantity.to_s.gsub(/\.0+$/,''), :style => "width: 78px;", :label => "" %>
<% else -%>
  <%= f.text_field :quantity, :value => f.object.quantity.to_s.gsub(/\.0+$/,''), :style => "width: 78px;", :no_label => true %>
<% end -%>
<%= f.select :unit, InvoiceLine.units, {:no_label => true}, {:style => "width: 100px;"} %>
<%= f.text_field :description, :style => "width: 288px;", :no_label => true %>
<%= call_hook(:invoice_form_order_line_reference) %>
<%= f.text_field :price, :value => f.object.price.to_s.gsub(/\.0+$/,''), :style => "width: 78px;", :no_label => true %>

<% i=0 -%>
<% @invoice.taxes_hash.keys.sort.each do |name| -%>
  <% current_tax = f.object.taxes.collect {|t| t if t.name == name }.compact.first || Tax.new(:category=>nil) %>
  <%= select_tag("invoice[invoice_lines_attributes][#{lineid}][taxes_attributes][#{i.to_s}][code]",
                 options_for_select(tax_categories_array(@invoice,name),
                 :selected => current_tax.code),
                 :class => "tax tax_#{name}",
                 :style => @invoice.tax_per_line?(name) ? "" : "display: none;",
                 :onchange => "tax_changed('#{name}',this.value);"
                ) %>
  <%= hidden_field_tag("invoice[invoice_lines_attributes][#{lineid}][taxes_attributes][#{i.to_s}][name]", name) %>
  <%= hidden_field_tag("invoice[invoice_lines_attributes][#{lineid}][taxes_attributes][#{i.to_s}][id]", current_tax.id) %>
  <% i+=1 -%>
<% end -%>

<%= f.object.new_and_first ? "" : link_to_function(image_tag("false.png"),"rm_line(#{lineid});") %>

</div>
<%= f.object.new_record? ? "" : f.hidden_field(:_destroy, {:value=>0, :id=>"destroy_line_#{lineid}"}) %>
