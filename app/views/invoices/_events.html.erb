<% if @invoice.events.any? -%>
  <div id="events">
    <h4><%=h l(:events)%></h4>
    <p></p>
    <ul>
    <% @invoice.events.each do |e| -%>
      <li><%=h e %> <%= download_link_for(e) %></li>

      <% if (e.name == "accept" || e.name == "refuse") && !e.info.blank? -%>
        <div id="event_<%=e.id%>" style="display:none;">
          <div class="mail_box">
            <div id="mail">
              <%= t(:field_subject) %>:
              <%= t((e.name == "accept" ? :received_invoice_accepted : :received_invoice_refused), :num => @invoice.number, :company => @invoice.company.name) %><br /><br />
              <%= simple_format e.info %><br />
              <%= link_to_function(l(:back), "$('event_#{e.id}').hide();") %>
            </div>
          </div>
          <div class="overlay"></div>
        </div>
      <% end -%>

    <% end -%>
    </ul>
  </div>
<% end -%>
