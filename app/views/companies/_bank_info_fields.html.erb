<% bank_info_id = f.object.new_record? ? Time.now.to_i : f.object.id -%>

<div class="seccio grup nested-fields">
  <p class="col span-1-de-4">
  <%= f.text_field :name, :no_label => true %>
  </p>
  <% if @company.bank_infos.reject {|bi| bi.bank_account.blank? }.present? -%>
    <p class="col span-1-de-4">
    <% unless f.object.bank_account.blank? -%>
      <%= f.text_field :bank_account, :maxlength => 20, :size => 30, :no_label => true, :maxlength => 20, :disabled => true %>
    <% end -%>
    </p>
  <% end -%>
  <p class="col span-1-de-4">
  <%= f.text_field :iban, :size => 24, :no_label => true, :maxlength => 24, :class => 'iban', "data-url" => project_check_iban_path(@project), "data-span-for-result" => "iban#{bank_info_id}" %>
  <span id="iban<%=bank_info_id%>"></span>
  </p>
  <p class="col span-1-de-4">
  <%= f.text_field :bic, :no_label => true, :size => 11, :maxlength => 11 %>
  <!-- cocoon -->
  <%= link_to_remove_association image_tag('false.png'), f, :class=>'eliminar', :style => "margin-left: 8px; vertical-align: middle;" %>
  </p>
</div>
